::template::
<b:section class='b-section-main' id='b-section-main' maxwidgets='1' name='Main section' showaddelement='no'>
  {#==================================================
  Blog widget
  - Breadcrumb
  - Status message
  - Posts
  - Comments
  - Pager
  ==================================================#}
  <b:widget id='Blog1' locked='true' title='Blog Posts' type='Blog' visible='true'>
    <b:includable id='main' var='this'>

      <b:comment>
      ##################################################
      ### Posts List 
      ###===============================================
      ### Homepage | Search (label|query|default) page | Archive page ###</b:comment>

      <b:if cond='data:view.isHomepage or data:view.isSearch or data:view.isArchive'>
        <section class="recent-posts">
          <div class="section-title">
            <h2><span>All Stories</span></h2>
          </div>          
          <div class="card-columns listrecent">


            <b:if cond='data:posts.notEmpty'>
              <b:if cond='data:view.isMultipleItems'>
                <b:loop values='data:posts' var='post'>
                  <article class='post post-index' expr:id='"post-" + data:post.id'>

                    <div class='card'>

                      <b:comment>=== Featured image ===</b:comment>
                      <b:with value='800' var='size'>
                      <b:with value='"16:9"' var='ratio'>
                        <b:if cond='data:post.featuredImage'>
                          <div class='post-featured-image'>
                            <b:if cond='data:post.featuredImage.isYoutube'>
                              <a expr:href='data:post.link ?: data:post.url'>
                                <img>
                                  <!-- src --><b:attr expr:value='data:post.featuredImage.youtubeMaxResDefaultUrl.isResizable ? resizeImage(data:post.featuredImage.youtubeMaxResDefaultUrl, data:size, data:ratio) : data:post.featuredImage.youtubeMaxResDefaultUrl' name='src'/>
                                  <!-- alt --><b:attr expr:value='data:post.title ? data:post.title : data:messages.image' name='alt'/>
                                  <b:attr name='b:whitespace' value='remove'/>
                                  <!-- class --><b:attr value='img-fluid' name='class'/>
                                </img>
                              </a>
                            <b:else/>
                              <a expr:href='data:post.link ?: data:post.url'>
                                <img>
                                  <!-- src --><b:attr expr:value='data:post.featuredImage.isResizable ? resizeImage(data:post.featuredImage, data:size, data:ratio) : data:post.featuredImage' name='src'/>
                                  <!-- alt --><b:attr expr:value='data:post.title ? data:post.title : data:messages.image' name='alt'/>
                                  <b:attr name='b:whitespace' value='remove'/>
                                  <!-- class --><b:attr value='img-fluid' name='class'/>
                                </img>
                              </a>
                            </b:if>
                          </div>
                        </b:if>
                      </b:with>
                      </b:with>

                      <div class="card-block">

                        <b:comment>=== Title ===</b:comment>
                        <h2 class='card-title'>
                          <a expr:href='data:post.link ?: data:post.url'>
                            <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/>
                          </a>
                        </h2>

                        <b:comment>=== Snippet ===</b:comment>
                        <h4 class='card-text'><data:post.snippets.short/></h4>

                        <div class="metafooter">
                          <div class="wrapfooter">

                            <span class="meta-footer-thumb">
                              <b:with value='42' var='size'>
                              <b:with value='"1:1"' var='ratio'>
                                <b:if cond='data:post.author and data:post.author.authorPhoto'>
                                  <img>
                                    <!-- class --><b:class name='post-meta-avatar'/>
                                    <!-- src --><b:attr expr:value='data:post.author.authorPhoto.image.isResizable ? resizeImage(data:post.author.authorPhoto.image, data:size, data:ratio) : data:post.author.authorPhoto.image' name='src'/>
                                    <!-- alt --><b:attr expr:value='data:post.author.name' name='alt'/>
                                    <b:attr name='b:whitespace' value='remove'/>
                                    <!-- class --><b:attr value='author-thumb' name='class'/>
                                  </img>
                                <b:else/><!-- fallback -->
                                  <svg class='post-meta-avatar author-thumb' viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'>
                                    <title>icon</title>
                                    <path fill='#ff5722' d='M 4.4504803e-7,0 H 512 V 512 H 4.4504803e-7 Z'/>
                                    <path fill='#ffffff' d='m 256.00001,255.99998 c 39.45313,0 71.42854,-27.97852 71.42854,-62.50001 C 327.42855,158.97848 295.4531,131 256.00001,131 c -39.45313,0 -71.42861,27.97848 -71.42861,62.49997 0,34.52149 31.97548,62.50001 71.42861,62.50001 z m 49.99998,15.62502 h -9.31919 c -12.38838,4.98044 -26.17186,7.81248 -40.68079,7.81248 -14.50896,0 -28.23662,-2.83204 -40.68083,-7.81248 H 206 c -41.40624,0 -75,29.39449 -75,65.625 v 20.31251 C 131,370.50195 142.99777,381 157.7857,381 H 354.21425 C 369.00225,381 381,370.50195 381,357.56251 V 337.25 c 0,-36.23051 -33.59374,-65.62504 -75.00001,-65.625 z'/>
                                  </svg>
                                </b:if>
                              </b:with>
                              </b:with>
                            </span>
                            <span class="author-meta">
                              <b:comment>=== Author name ===</b:comment>
                              <span class="post-name">
                                <!--<span><data:messages.by/></span>-->
                                <b:if cond='data:post.author.profileUrl'>
                                  <a expr:href='data:post.author.profileUrl'>
                                    <b:eval expr='data:post.author ? data:post.author.name : "Anonymous"'/>
                                  </a>
                                <b:else/><!-- no profileUrl -->
                                  <span><b:eval expr='data:post.author ? data:post.author.name : "Anonymous"'/></span>
                                </b:if>
                              </span>

                              <br/>
                              <b:comment>=== Date (published) ===</b:comment>
                              <span class="post-date">
                                <time expr:datetime='data:post.date.iso8601' expr:title='data:post.date.iso8601'>
                                  <data:post.date/>
                                </time>
                              </span>
                              <span class="dot"></span>

                              <b:comment>=== Comments link ===</b:comment>
                              <span class="post-read">
                                <b:if cond='data:post.allowComments'>
                                  <a expr:href='data:post.commentsUrl'>
                                    <b:message name='messages.numberOfComments'>
                                      <b:param expr:value='data:post.numberOfComments' name='numComments'/>
                                    </b:message>
                                  </a>
                                </b:if>
                              </span>
                            </span><!--/.author-meta-->
                            <span class="post-read-more"><a expr:href="data:post.url" title="Read Story"><svg class="svgIcon-use" width="25" height="25" viewbox="0 0 25 25"><path d="M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z" fill-rule="evenodd"></path></svg></a></span>

                          </div><!--/.wrapfooter-->
                        </div><!--/.metafooter-->

                      </div><!--/.card-block-->
                    </div><!--/.card-->
                  </article>
                </b:loop>
              </b:if>
            </b:if>

          </div><!--/.listrecent-->

          <div class="col-md-12 col-xs-12">
            <b:comment>### Search (label|query|default) page | Archive page ###</b:comment>

            <b:if cond='data:view.isSearch or data:view.isArchive'>
              <b:if cond='data:posts.empty'>
                <div class='not-found-message' id='not-found-message' role='alert'>
                  <data:messages.noResultsFound/>
                </div>
              </b:if>
            </b:if>
          </div>

        </section><!--/.recent-posts-->
      </b:if>



      <b:comment>### Error page ###</b:comment>

      <b:if cond='data:view.isError'>
        <div class='not-found-message' id='not-found-message' role='alert'>
          <data:navMessage/>
        </div>
      </b:if>

      <b:comment>
      ##################################################
      Not found message
      ##################################################</b:comment>

      <b:comment>### Homepage ###</b:comment>

      <b:if cond='data:view.isHomepage'>
        <b:if cond='data:posts.empty'>
          <div class='not-found-message' id='not-found-message' role='alert'>
            <data:messages.theresNothingHere/>
          </div>
        </b:if>
      </b:if>




      <b:comment>
      ##################################################
      Breadcrumb
      ##################################################
      <b:if cond='data:view.isPost'>
        <ol class='breadcrumb' id='breadcrumb'>

          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'>
              <data:messages.home/>
            </a>
          </li>

          <b:comment>### Post page ###</b:comment>

          <b:if cond='data:view.isPost'>
            <b:loop values='data:posts' var='post'>
              <li class='breadcrumb-item active'>
                <span>Post:</span>
                <span><b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/></span>
              </li>
            </b:loop>
          </b:if>

          <b:comment>### Static page ###</b:comment>

          <b:if cond='data:view.isPage'>
            <b:loop values='data:posts' var='post'>
              <li class='breadcrumb-item active'>
                <span>Page:</span>
                <span><b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/></span>
              </li>
            </b:loop>
          </b:if>

          <b:comment>### Search (label) page ###</b:comment>

          <b:if cond='data:view.isLabelSearch'>
            <li class='breadcrumb-item'>
              <a class='breadcrumb-link' expr:href='path(data:blog.homepageUrl, "/search")'>
                Search
              </a>
            </li>
            <li class='breadcrumb-item active'>
              <span>Label:</span>
              <span><data:view.search.label/></span>
            </li>
          </b:if>

          <b:comment>### Search (query) page ###</b:comment>

          <b:if cond='data:view.search.query'>
            <li class='breadcrumb-item'>
              <a class='breadcrumb-link' expr:href='path(data:blog.homepageUrl, "/search")'>
                Search
              </a>
            </li>
            <li class='breadcrumb-item active'>
              <span>Query:</span>
              <span><data:view.search.query/></span>
            </li>
          </b:if>

          <b:comment>### Search (default) page ###</b:comment>

          <b:if cond='data:view.isSearch and !data:view.isLabelSearch and !data:view.search.query'>
            <li class='breadcrumb-item active'>
              <span>Search</span>
            </li>
          </b:if>

          <b:comment>### Archive page ###</b:comment>

          <b:if cond='data:view.isArchive'>
            <b:if cond='data:view.archive.month'>
              <li class='breadcrumb-item'>
                <a class='breadcrumb-link' expr:href='data:blog.homepageUrl + data:view.archive.year'>
                  <data:view.archive.year/>
                </a>
              </li>
              <li class='breadcrumb-item active'>
                <span><data:view.archive.month/></span>
              </li>
            <b:else/>
              <li class='breadcrumb-item active'>
                <span><data:view.archive.year/></span>
              </li>
            </b:if>
          </b:if>

          <b:comment>### Error page ###</b:comment>

          <b:if cond='data:view.isError'>
            <li class='breadcrumb-item active'>
              <span>404</span>
            </li>
          </b:if>

        </ol>
      </b:if>
      </b:comment>

      <b:comment>### Post page ###</b:comment>

      <b:if cond='data:posts.notEmpty'>
        <b:if cond='data:view.isPost'>
          <b:loop values='data:posts' var='post'>

            <div class="row">
              <!-- Begin Fixed Left Share -->
              <div class="col-md-2 col-xs-12">
                <div class="share">
                  <p>
                    Share
                  </p>
                  <ul>
                    <li>
                    <a target="_blank" expr:href='"https://twitter.com/home?status=" + data:post.url'>
                    <svg class="svgIcon-use" width="29" height="29" viewbox="0 0 29 29"><path d="M21.967 11.8c.018 5.93-4.607 11.18-11.177 11.18-2.172 0-4.25-.62-6.047-1.76l-.268.422-.038.5.186.013.168.012c.3.02.44.032.6.046 2.06-.026 3.95-.686 5.49-1.86l1.12-.85-1.4-.048c-1.57-.055-2.92-1.08-3.36-2.51l-.48.146-.05.5c.22.03.48.05.75.08.48-.02.87-.07 1.25-.15l2.33-.49-2.32-.49c-1.68-.35-2.91-1.83-2.91-3.55 0-.05 0-.01-.01.03l-.49-.1-.25.44c.63.36 1.35.57 2.07.58l1.7.04L7.4 13c-.978-.662-1.59-1.79-1.618-3.047a4.08 4.08 0 0 1 .524-1.8l-.825.07a12.188 12.188 0 0 0 8.81 4.515l.59.033-.06-.59v-.02c-.05-.43-.06-.63-.06-.87a3.617 3.617 0 0 1 6.27-2.45l.2.21.28-.06c1.01-.22 1.94-.59 2.73-1.09l-.75-.56c-.1.36-.04.89.12 1.36.23.68.58 1.13 1.17.85l-.21-.45-.42-.27c-.52.8-1.17 1.48-1.92 2L22 11l.016.28c.013.2.014.35 0 .52v.04zm.998.038c.018-.22.017-.417 0-.66l-.498.034.284.41a8.183 8.183 0 0 0 2.2-2.267l.97-1.48-1.6.755c.17-.08.3-.02.34.03a.914.914 0 0 1-.13-.292c-.1-.297-.13-.64-.1-.766l.36-1.254-1.1.695c-.69.438-1.51.764-2.41.963l.48.15a4.574 4.574 0 0 0-3.38-1.484 4.616 4.616 0 0 0-4.61 4.613c0 .29.02.51.08.984l.01.02.5-.06.03-.5c-3.17-.18-6.1-1.7-8.08-4.15l-.48-.56-.36.64c-.39.69-.62 1.48-.65 2.28.04 1.61.81 3.04 2.06 3.88l.3-.92c-.55-.02-1.11-.17-1.6-.45l-.59-.34-.14.67c-.02.08-.02.16 0 .24-.01 2.12 1.55 4.01 3.69 4.46l.1-.49-.1-.49c-.33.07-.67.12-1.03.14-.18-.02-.43-.05-.64-.07l-.76-.09.23.73c.57 1.84 2.29 3.14 4.28 3.21l-.28-.89a8.252 8.252 0 0 1-4.85 1.66c-.12-.01-.26-.02-.56-.05l-.17-.01-.18-.01L2.53 21l1.694 1.07a12.233 12.233 0 0 0 6.58 1.917c7.156 0 12.2-5.73 12.18-12.18l-.002.04z"></path></svg>
                    </a>
                    </li>
                    <li>
                    <a target="_blank" expr:href='"https://www.facebook.com/sharer/sharer.php?u="+ data:post.url'>
                    <svg class="svgIcon-use" width="29" height="29" viewbox="0 0 29 29"><path d="M16.39 23.61v-5.808h1.846a.55.55 0 0 0 .546-.48l.36-2.797a.551.551 0 0 0-.547-.62H16.39V12.67c0-.67.12-.813.828-.813h1.474a.55.55 0 0 0 .55-.55V8.803a.55.55 0 0 0-.477-.545c-.436-.06-1.36-.116-2.22-.116-2.5 0-4.13 1.62-4.13 4.248v1.513H10.56a.551.551 0 0 0-.55.55v2.797c0 .304.248.55.55.55h1.855v5.76c-4.172-.96-7.215-4.7-7.215-9.1 0-5.17 4.17-9.36 9.31-9.36 5.14 0 9.31 4.19 9.31 9.36 0 4.48-3.155 8.27-7.43 9.15M14.51 4C8.76 4 4.1 8.684 4.1 14.46c0 5.162 3.75 9.523 8.778 10.32a.55.55 0 0 0 .637-.543v-6.985a.551.551 0 0 0-.55-.55H11.11v-1.697h1.855a.55.55 0 0 0 .55-.55v-2.063c0-2.02 1.136-3.148 3.03-3.148.567 0 1.156.027 1.597.06v1.453h-.924c-1.363 0-1.93.675-1.93 1.912v1.78c0 .3.247.55.55.55h2.132l-.218 1.69H15.84c-.305 0-.55.24-.55.55v7.02c0 .33.293.59.623.54 5.135-.7 9.007-5.11 9.007-10.36C24.92 8.68 20.26 4 14.51 4"></path></svg>
                    </a>
                    </li>
                  </ul>
                  <div class="sep">
                  </div>
                  <p>
                    Talk
                  </p>
                  <ul>
                    <li>
                    <a href="#comments">
                    <data:post.numberOfComments/>
                    <br/>
                    <svg class="svgIcon-use" width="29" height="29" viewbox="0 0 29 29"><path d="M21.27 20.058c1.89-1.826 2.754-4.17 2.754-6.674C24.024 8.21 19.67 4 14.1 4 8.53 4 4 8.21 4 13.384c0 5.175 4.53 9.385 10.1 9.385 1.007 0 2-.14 2.95-.41.285.25.592.49.918.7 1.306.87 2.716 1.31 4.19 1.31.276-.01.494-.14.6-.36a.625.625 0 0 0-.052-.65c-.61-.84-1.042-1.71-1.282-2.58a5.417 5.417 0 0 1-.154-.75zm-3.85 1.324l-.083-.28-.388.12a9.72 9.72 0 0 1-2.85.424c-4.96 0-8.99-3.706-8.99-8.262 0-4.556 4.03-8.263 8.99-8.263 4.95 0 8.77 3.71 8.77 8.27 0 2.25-.75 4.35-2.5 5.92l-.24.21v.32c0 .07 0 .19.02.37.03.29.1.6.19.92.19.7.49 1.4.89 2.08-.93-.14-1.83-.49-2.67-1.06-.34-.22-.88-.48-1.16-.74z"></path></svg>
                    </a>
                    </li>
                  </ul>
                </div>
              </div>
              <!-- End Fixed Left Share -->

              <!-- Begin Post -->
              <div class="col-md-8 col-md-offset-2 col-xs-12">

                

                <article class='post post-single' expr:id='"post-" + data:post.id'>

                  <b:comment>=== Meta ===</b:comment>
                  <div class="mainheading">

                    <!-- Begin Top Meta -->
                    <div class="row post-top-meta">
                      <div class="col-md-2">
                        <!-- Author Photo -->                          
                        <a expr:href='data:post.author.profileUrl'>
                          <b:comment>=== Author photo ===</b:comment>
                          <b:with value='42' var='size'>
                          <b:with value='"1:1"' var='ratio'>
                            <b:if cond='data:post.author and data:post.author.authorPhoto'>
                              <img>
                                <!-- class --><b:class name='author-thumb'/>
                                <!-- src --><b:attr expr:value='data:post.author.authorPhoto.image.isResizable ? resizeImage(data:post.author.authorPhoto.image, data:size, data:ratio) : data:post.author.authorPhoto.image' name='src'/>
                                <!-- alt --><b:attr expr:value='data:post.author.name' name='alt'/>
                                <b:attr name='b:whitespace' value='remove'/>
                              </img>
                            <b:else/><!-- fallback -->
                              <svg class='author-thumb' viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'>
                                <title>icon</title>
                                <path fill='#ff5722' d='M 4.4504803e-7,0 H 512 V 512 H 4.4504803e-7 Z'/>
                                <path fill='#ffffff' d='m 256.00001,255.99998 c 39.45313,0 71.42854,-27.97852 71.42854,-62.50001 C 327.42855,158.97848 295.4531,131 256.00001,131 c -39.45313,0 -71.42861,27.97848 -71.42861,62.49997 0,34.52149 31.97548,62.50001 71.42861,62.50001 z m 49.99998,15.62502 h -9.31919 c -12.38838,4.98044 -26.17186,7.81248 -40.68079,7.81248 -14.50896,0 -28.23662,-2.83204 -40.68083,-7.81248 H 206 c -41.40624,0 -75,29.39449 -75,65.625 v 20.31251 C 131,370.50195 142.99777,381 157.7857,381 H 354.21425 C 369.00225,381 381,370.50195 381,357.56251 V 337.25 c 0,-36.23051 -33.59374,-65.62504 -75.00001,-65.625 z'/>
                              </svg>
                            </b:if>
                          </b:with>
                          </b:with>
                        </a>
                      </div>
                      <div class="col-md-10">
                        <!-- Author Name -->
                        <b:if cond='data:post.author.profileUrl'>
                          <a class="link-dark" expr:href='data:post.author.profileUrl'>
                            <b:eval expr='data:post.author ? data:post.author.name : "Anonymous"'/>
                          </a>
                        <b:else/><!-- no profileUrl -->
                          <span><b:eval expr='data:post.author ? data:post.author.name : "Anonymous"'/></span>
                        </b:if>

                        <!-- Author Follow -->
                        <a href="#" class="btn follow">Follow</a>

                        <!-- Author Greeting or Message -->
                        <span class="author-description">
                          Founder of WowThemes.net and creator of <b>"Mediumish"</b> theme that you're currently previewing. Developing professional premium themes, templates, plugins, scripts since 2012.
                        </span>
                        <span class="post-date">
                          <time expr:datetime='data:post.date.iso8601' expr:title='data:post.date.iso8601'>
                            <data:post.date/>
                          </time>
                        </span>
                        <span class="dot"></span>
                        <span class="post-read">
                          <b:message name='messages.numberOfComments'>
                            <b:param expr:value='data:post.numberOfComments' name='numComments'/>
                          </b:message>
                        </span>
                      </div>
                    </div>
                    <!-- End Top Menta -->

                    <b:comment>=== Title ===</b:comment>
                    <h1 class="posttitle"><b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/></h1>

                  </div><!--./mainheading-->

                  <!-- Begin Featured Image -->
                  <!--<img class="featured-image img-fluid" src="assets/img/demopic/10.jpg" alt=""/>-->


                  <b:comment>=== Body ===</b:comment>
                  <!-- Begin Post Content -->
                  <div class="article-post">
                    <data:post.body/>
                  </div>
                  <!-- End Post Content -->



                  <b:comment>=== Labels ===</b:comment>
                  <!-- Begin Tags -->
                  <div class="after-post-tags">
                    <b:if cond='data:post.labels'>
                      <ul class="tags">
                        <b:loop index='i' values='data:post.labels' var='label'>
                          <li><a expr:href='params(data:label.url, { max-results: "12" })'><data:label.name/></a></li>
                        </b:loop>
                      </ul>
                    </b:if>
                  </div>

                </article>
                

              </div>
              <!-- End Post -->
            </div><!--/.row-->
          </b:loop>
        </b:if>
      </b:if>

      <b:comment>### Static page ###</b:comment>

      <b:if cond='data:posts.notEmpty'>
        <b:if cond='data:view.isPage'>
          <b:loop values='data:posts' var='post'>
            <article class='post post-single' expr:id='"post-" + data:post.id'>

              <b:comment>=== Title ===</b:comment>
              <h1 class='post-title-single'>
                <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/>
              </h1>

              <b:comment>=== Body ===</b:comment>
              <div class='post-body'>
                <data:post.body/>
              </div>

            </article>
          </b:loop>
        </b:if>
      </b:if>


<div class="hideshare"></div>

      <b:comment>
