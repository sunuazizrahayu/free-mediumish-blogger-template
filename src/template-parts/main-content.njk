.comments {
  margin-bottom: 20px;
  padding: $(comments.padding);
  background-color: $(comments.background.color);
  border: $(comments.border.width) solid $(comments.border.color);
  border-radius: $(comments.border.radius);
}
.comments:last-child {
  margin-bottom: 0;
}

/**
 * Comments title
 */

.comments-title {
  margin-top: 0;
  margin-bottom: $(comment.block.margin);
  color: $(comments.title.color);
  font-size: $(comments.title.font.size);
  font-family: $(comments.title.font.family);
}

.comments-title small {
  font-size: 80%;
}

/**
 * Comment block
 */

.comment-block {
  margin-top: $(comment.block.margin);
  padding: $(comment.block.padding);
  color: $(comment.block.color);
  background-color: $(comment.block.background.color);
  border: $(comment.block.border.width) solid $(comment.block.border.color);
  border-radius: $(comment.block.border.radius);
}

.comment-block a {
  color: $(comment.block.link.color);
}
.comment-block a:hover,
.comment-block a:focus {
  color: $(comment.block.link.hover.color);
}

/**
 * Comment alert
 */

.comment-warning {
  margin-top: $(comment.block.margin);
  padding: 10px 15px;
  color: #856404;
  font-size: 16px;
  background-color: #fff3cd;
  border: 1px solid #ffeeba;
  border-radius: 4px;
}

.comment-body .comment-warning {
  margin-top: 0;
}

/**
 * Comment list
 */

.comment-list,
.comment-list-children {
  margin-top: 0;
  margin-bottom: 0;
  padding-left: 0;
  list-style: none;
}

.comment-list-children > li {
  margin-left: 30px;
}

/**
 * Comment content
 */

/* === Comment header === */

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}
.comment-header-col-1 {
  width: auto;
  margin-right: 10px;
}
.comment-header-col-2 {
  width: 100%;
}

/* Avatar */

.comment-avatar {
  width: 42px;
  height: 42px;
  vertical-align: middle;
  border-radius: 50%;
}
.comment-default-avatar {
  overflow: hidden;
  color: #fff;
  font-weight: 700;
  font-size: 16px;
  line-height: 42px;
  text-align: center;
  background-color: #ff5722;
  user-select: none;
}

/* Author */

.comment-author {
  font-weight: 500;
  font-size: 16px;
}
.comment-author .comment-author-badge {
  position: relative;
  top: -1px;
  display: inline-block;
  padding: 2px 4px;
  color: $(comment.author.badge.color);
  font-weight: 500;
  font-size: 11px;
  line-height: 1.2;
  background-color: $(comment.author.badge.background.color);
  border-radius: $(comment.author.badge.border.radius);
}

/* Meta */

.comment-meta {
  font-size: 14px;
}

/* === Comment body === */

.comment-body {
  margin-bottom: 15px;
  font-size: 16px;
}

/* === Comment actions === */

.comment-actions {
  font-size: 14px;
}

/**
 * Comment pagination
 */

.comment-pagination {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/**
 * Comment form
 */

.comment-form-title,
.comment-form-message {
  margin-top: 0;
  margin-bottom: 10px;
}
.comment-form-title {
  font-size: 20px;
}
.comment-form-message {
  font-size: 16px;
}

.comment-editor {
  width: 100%;
  border: 0;
}

.comment-cancel-reply {
  display: inline-block;
  margin-top: 5px;
}
.original-form-container .comment-cancel-reply {
  display: none;
}


/* Comment form Reply */
.original-form-container .comment-form .comment-form-title{
  display: inline-block;
}
.reply-form-container .comment-form{
  margin-top: -30px;
  border-top: none;
  border-radius: 0 0 4px 4px;
}
.reply-form-container .comment-form .comment-form-title{
  display: none;
}


